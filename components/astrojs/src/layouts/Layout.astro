---
import { ViewTransitions } from "astro:transitions";
import { Header } from "../components/header";
import { Background } from "../components/background";
import SvelteLogo from "../assets/svelte-logo.svg?url";
import AstroLogo from "../assets/astro-logo.svg?url";
import RemixLogo from "../assets/remix-logo.svg?url";
import CrystallizeLogo from "../assets/crystallize-logo.svg?url";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
const { pathname } = Astro.url;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="relative text-text bg-primary">
    <Header client:only />
    <slot />
    {
      pathname === "/cart" ||
      pathname === "/checkout" ||
      pathname.startsWith("/order") ? null : (
        <div class="absolute inset-0 bg-fixed -z-10">
          <Background />
        </div>
      )
    }
    <footer class="container mt-40 mx-auto pb-10">
      <div class="flex justify-between mt-10">
        <a href="/" title="Astro" class="footer-link">
          <img src={AstroLogo} alt="Astro" class="w-20" />
        </a>
        <a
          href="https://dounot.milliseconds.live/"
          title="Remix"
          class="footer-link"
        >
          <img src={RemixLogo} alt="Remix" class="w-20" />
        </a>
        <a
          href="https://dounut-svelte.vercel.app/"
          title="Svelte"
          class="footer-link"
        >
          <img src={SvelteLogo} alt="Svelte" class="w-20" />
        </a>
      </div>
      <div class="flex items-center gap-1 mt-10">
        <img src={CrystallizeLogo} alt="Crystallize" class="w-5" />
        Powered by <a
          href="https://crystallize.com"
          class="underline"
        >
          Crystallize</a
        >
      </div>
    </footer>
    <style is:global>
      @media screen and (max-width: 768px) {
        .crystallize-grid {
          display: flex !important;
          flex-direction: column !important;
        }
        .bg-fixed {
          display: none;
        }
      }
      .bg-fixed {
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
      }

      .footer-link:hover {
        transition: transform 0.2s ease-in-out;
        transform: scale(1.1);
      }
    </style>
  </body>
</html>
