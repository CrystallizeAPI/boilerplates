{
    "name": "crystallize-furniture-v2-remix-ts-boilerplate",
    "private": true,
    "description": "Crystallize Furniture v2 Remix Boilerplate",
    "license": "MIT",
    "sideEffects": false,
    "scripts": {
        "build": "npm run build:css:default && npm run build:css:dark && npm run build:css:rainbow && remix build",
        "build:css:default": "tailwindcss -c src/app/styles/tailwind/default.js -m -i ./src/app/styles/index.css -o ./src/app/styles/tailwind.default.css",
        "build:css:dark": "tailwindcss -c src/app/styles/tailwind/dark.js -m -i ./src/app/styles/index.css -o ./src/app/styles/tailwind.dark.css",
        "build:css:rainbow": "tailwindcss -c src/app/styles/tailwind/dark.js -m -i ./src/app/styles/index.css -o ./src/app/styles/tailwind.rainbow.css",
        "dev": "PORT=3018 concurrently \"npm run dev:css:default\" \"npm run dev:css:dark\" \"npm run dev:css:rainbow\" \"remix dev\"",
        "dev:css:default": "tailwindcss -c src/app/styles/tailwind/default.js -w -i ./src/app/styles/index.css -o ./src/app/styles/tailwind.default.css",
        "dev:css:dark": "tailwindcss -c src/app/styles/tailwind/dark.js -w -i ./src/app/styles/index.css -o ./src/app/styles/tailwind.dark.css",
        "dev:css:rainbow": "tailwindcss -c src/app/styles/tailwind/dark.js -w -i ./src/app/styles/index.css -o ./src/app/styles/tailwind.rainbow.css",
        "start": "remix-serve build"
    },
    "dependencies": {
        "@crystallize/js-api-client": "^0.7.1",
        "@crystallize/js-storefrontaware-utils": "^0.1.2",
        "@crystallize/reactjs-components": "^0.3.0",
        "@crystallize/reactjs-hooks": "^0.7.0",
        "@react-pdf/renderer": "^2.1.2",
        "@rehooks/local-storage": "^2.4.4",
        "@remix-run/node": "^1.4.3",
        "@remix-run/react": "^1.4.3",
        "@remix-run/serve": "^1.4.3",
        "@splidejs/react-splide": "^0.7.5",
        "@stripe/react-stripe-js": "^1.7.2",
        "@stripe/stripe-js": "^1.29.0",
        "jwt-decode": "^3.1.2",
        "lodash": "^4.17.21",
        "platformsh-config": "^2.4.1",
        "rc-slider": "^10.0.0",
        "react": "^17",
        "react-debounce-input": "^3.2.5",
        "react-dom": "^17",
        "redis": "^4.1.0"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.4.3",
        "@types/lodash": "^4.14.182",
        "@types/react": "^17",
        "@types/react-dom": "^17",
        "autoprefixer": "^10.4.6",
        "concurrently": "^7.1.0",
        "postcss": "^8.4.13",
        "tailwindcss": "^3.0.24",
        "typescript": "^4.5.5"
    },
    "engines": {
        "node": ">=14"
    },
    "volta": {
        "node": "16.15.1"
    }
}
